package a.basic;

import java.util.Scanner;
//1) Scanner를 사용하기위해 외부로부터 가져온다.

public class intput {
	public static void main(String[] args) {
		/*
		 * 키보드로 값을 입력하는 방법
		 * Scanner를 사용한다.
		 * (java.utill.Scanner 클래스를 이용한다.)
		 * 
		 * [사용법]
		 * Scanner 이름 = new Scanner(System.in);
		 * ex)Scanner sc = new Scanner(System.in);
		 */
		
		Scanner  sc = new Scanner(System.in);
		
		String str1, str2;
		
		System.out.print("입력해라! :");
		str1 = sc.next();
		str2 = sc.nextLine();
		
		System.out.println("str1에 입력한값:" + str1);
		System.out.println("str1에 입력한값:" + str2);


	}

}
