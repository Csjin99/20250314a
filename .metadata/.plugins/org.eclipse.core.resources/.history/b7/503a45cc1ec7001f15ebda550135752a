package b.operater;

import java.util.Scanner;

public class Operator5 {
	/*
	 * 논리연산자
	 * 두개의 논리값을 연산해주는 연산자
	 * 노리연산한 결과도 논리값이 된다.
	 * 
	 * 논리값 && 논리값 : 왼쪽, 오른쪽 조건이 모두 true일 때만 결과가 true이다.
	 * 논리감 || 놀리값 : 왼쪽, 오른쪽 두값중 하나라도 true라면 결과는 true가 된다.
	 */

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		//사용자에게 숫자를 입력받아 해당 숫자가 1~100사이값인지 호가인해라
		
		int num1;
		System.out.println("정수 하나 입력: ");
		num1 = sc.nextInt();
		
		// 1 <= num1 <= 100 -> num1 >= 1 && num <= 100
		boolean result = (num1 >= 1) && (num1 <= 100);
		System.out.println("사용자가 입력한 값은 1이상 100이하이다 :" + result);

	}

}
